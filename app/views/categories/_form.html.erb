<%= render 'shared/error', obj:@category %>

<div class = 'well'>
	<%= form_for @category do |f| %>
		<div class = 'control-group'>
			<%= f.label :name %>
			<%= f.text_field :name %>
		</div>
		<% if current_user %>
			<%= f.submit(@category.new_record? ? 'Create Category' : 'Update Category', class: 'btn btn-primary') %>
		<% end %>
	<% end %>
</div>
