<% if current_user %>
  <%= form_for [@post, @comment] do |c| %>
  	<div class = 'control-group'>
  		<%= c.label :body, 'Leave a comment' %>
  		<%= c.text_area :body, rows: 3, class: 'span4' %>
  	</div>
  	<%= c.submit 'add new comment', class: 'btn btn-primary'%>
  <% end %>
<% end %>

<h5>Comments:</h5>

<% @post.comments.each do |c| %>
	<%= render 'comment', comment: c %>
<% end %>
