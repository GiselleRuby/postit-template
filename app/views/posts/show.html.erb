
<p class='pull-right'>
  [<%= link_to 'Edit this post', edit_post_path(@post) %>]
</p>

<%= render 'shared/title', title: @post.title %>
<%= render 'post', post: @post, comment: @comment %>

<%= render 'shared/error', obj:@comment %>

