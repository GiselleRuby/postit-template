<div class = 'well'>
  <%= form_for @user do |u| %>
    <div class = 'control-group'>
      <%= u.label :username %>
      <%= u.text_field :username %>
    </div>
    <div class = 'control-group'>
      <%= u.label :password %>
      <%= u.password_field :password %>
    </div>
    <p></p>
    <!-- <%= u.submit('Update', class: 'btn btn-primary') %> -->
    <%= u.submit @user.new_record? ? "Register" : "Update", class: 'btn btn-primary' %>
  <% end %>
</div>
