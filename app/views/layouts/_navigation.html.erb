<ul class="nav">
  <li>
    <%= link_to "Postit!", root_path, :class => 'brand' %>
  </li>
</ul>

<div class='btn-group nav_item'>
  <%= link_to '#', class: 'btn btn-small dropdown-toggle', 'data-toggle' => 'dropdown' do %>
    Categories <span class='caret'></span>
  <% end %>
  <ul class='dropdown-menu'>
    <% Category.all.each do |category| %>
      <li>
        <%= link_to category.name, category_path(category) %>
      </li>
    <% end %>
    <% if current_user %>
      <li class='divider'></li>
      <li>
        <%= link_to(new_category_path) do %>
          <i class='icon-plus'></i>
          New Category
        <% end %>
      </li>
    <% end %>
  </ul>
</div>

<% if logged_in? %>
  <div class='nav_item'>
    <%= link_to 'New Post', new_post_path, class: 'btn btn-warning btn-small' %>
    <!-- <%= link_to 'Logout', logout_path, class: 'btn btn-default btn-small' %> -->
    <div class="btn-group">
      <a class="btn dropdown-toggle btn-small" data-toggle="dropdown" href="#">
          <%= current_user.username %>
        <span class="caret"></span>
      </a>
      <ul class="dropdown-menu">
        <li>
          <%= link_to(edit_user_path(current_user)) do %>
            <i class='icon-edit'></i>
            Edit Profile
          <% end %>
        </li>
        <li>
          <%= link_to(user_path(current_user)) do %>
            <i class='icon-user'></i>
            View Profile
          <% end %>
        </li>
        <li>
          <%= link_to(logout_path) do %>
            <i class='icon-off'></i>
            Logout
          <% end %>
        </li>
      </ul>
    </div>
  </div>
<% else %>
  <div class='nav_item'>
    <%= link_to 'Register', register_path, class: 'btn btn-success btn-small' %>
    <%= link_to 'Login', login_path, class: 'btn btn-default btn-small' %>
  </div>
<% end %>
